<h4></h4>
<div class="row">
  <div class="col-md-8">
    <table class="table table-striped">
      <thead>
        <th>Name</th>
        <th><%= @run.name %></th>
      </thead>
      <tbody>
        <tr>
          <td>Date</td>
          <td><%= @run.date %></td>
        </tr>
        <tr>
          <td>City</td>
          <td><%= @run.city %></td>
        </tr>
        <tr>
          <td>Distance</td>
          <td><%= @run.distance %></td>
        </tr>
      </tbody>
    <table>
  </div>
  <div class="col-md-4">
    <p><%= link_to("Edit this run", edit_run_path(@run)) %></p>
    <p><%= link_to("Back to all runs", runs_path) %></p>
  </div>
</div>
