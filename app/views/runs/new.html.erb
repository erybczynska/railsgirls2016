<%= form_for(Run.new) do |form| %>
<div class="form-group">
  <p><%= form.label("name") %></p>
  <p><%= form.text_field("name") %></p>
  <p><%= form.label("date") %></p>
  <p><%= form.date_field("date") %></p>
  <p><%= form.label("city") %></p>
  <p><%= form.text_field("city") %></p>
  <p><%= form.label("distance") %></p>
  <p><%= form.number_field("distance") %></p>
  <p><%= form.submit %></p>
</div>
<% end %>
<p><%= link_to("Back to all runs", runs_path) %></p>
